#See https://aka.ms/containerfastmode to understand how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/runtime:7.0 AS base
WORKDIR /app

FROM mcr.microsoft.com/dotnet/sdk:7.0 AS build
WORKDIR /src
COPY ["JMS.Gateway/JMS.Gateway.csproj", "JMS.Gateway/"]
COPY ["JMS.Common/JMS.Common.csproj", "JMS.Common/"]
RUN dotnet restore "JMS.Gateway/JMS.Gateway.csproj"
COPY . .
WORKDIR "/src/JMS.Gateway"
RUN dotnet build "JMS.Gateway.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "JMS.Gateway.csproj" -c Release -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "JMS.Gateway.dll","-s:share"]